{
	admin off
}

:2222 {
	root ./public
	file_server
	log
	encode gzip

	# Set the Cache Headers
	route {
		header           Cache-Control no-cache
		header /bundle/* Cache-Control "must-revalidate, public, max-age=3600"
		header /assets/* Cache-Control "must-revalidate, public, max-age=3600"
	}

	# Serve the custom 404 page
	handle_errors {
		@404 {
			expression {http.error.status_code} == 404
		}
		rewrite @404 /404.html
		file_server
	}
}
